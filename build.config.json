{
  "productName": "Ledger",
  "appId": "Ledger",
  "icon": "resources/logo.ico",
  "copyright": "Copyright Â© 2022 by Ryan",
  "files": ["resources/**/*"],
  "extraResources": [
    {
      "from": "build/app.content",
      "to": "app/app.content"
    },
    {
      "from": "src/main",
      "to": "app/main"
    },
    {
      "from": "src/global",
      "to": "app/global"
    }
  ],
  "directories": {
    "buildResources": "resources",
    "output": "build/output"
  },
  "asar": false,
  "nsis": {
    "artifactName": "Ledger-${version}.${ext}",
    "perMachine": true,
    "oneClick": false,
    "warningsAsErrors": false,
    "deleteAppDataOnUninstall": true,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "win": {
    "target": "nsis"
  }
}
